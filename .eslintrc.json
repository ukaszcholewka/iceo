{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "plugin:react/recommended",
    "overrides": [],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": ["react", "@typescript-eslint"],
    "rules": {
        "semi": ["error", "never"],
        "quotes": ["error", "single"],
        "jsx-quotes": ["error", "prefer-double"],
        "react/react-in-jsx-scope": "off"
    }
}
